<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/widget_background"
    android:background="#000000"
    android:padding="16dp">

    <!-- Album Art -->
    <ImageView
        android:id="@+id/widget_album_art"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:contentDescription="Album Art"
        android:background="@drawable/widget_album_art_background" />

    <!-- Song Info Container -->
    <LinearLayout
        android:id="@+id/widget_song_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widget_album_art"
        android:layout_toStartOf="@id/widget_play_pause"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical">

        <!-- Song Title -->
        <TextView
            android:id="@+id/widget_song_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MONEY AND VIBES"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Artist Name -->
        <TextView
            android:id="@+id/widget_artist_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nemzzz"
            android:textColor="#99FFFFFF"
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- Play/Pause Button -->
    <ImageButton
        android:id="@+id/widget_play_pause"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/widget_play_pause_background"
        android:src="@drawable/pause"
        android:contentDescription="Play/Pause"
        android:scaleType="centerInside"
        android:padding="16dp"
        android:tint="#8B4545" />

</RelativeLayout>
