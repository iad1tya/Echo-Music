<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black">
    
    <!-- Album Art Background -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription" />
    
    <!-- Track Information -->
    <LinearLayout
        android:id="@+id/media_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#80000000">
        
        <!-- Current Track -->
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="Break Stuff" />
        
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:textStyle="normal"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginTop="2dp"
            tools:text="Limp Bizkit" />
    </LinearLayout>
    
    <!-- Playback Controls -->
    <LinearLayout
        android:id="@+id/media_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="16dp"
        android:background="#80000000">
        
        <ImageView
            android:id="@+id/button_prev"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="18dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/previous_widget"
            tools:ignore="ContentDescription" />
        
        <ImageView
            android:id="@+id/button_toggle_play_pause"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginHorizontal="14dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/play_widget"
            tools:ignore="ContentDescription" />
        
        <ImageView
            android:id="@+id/button_next"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="18dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/next_widget"
            tools:ignore="ContentDescription" />
    </LinearLayout>
    
    <!-- Clickable Area -->
    <FrameLayout
        android:id="@+id/clickable_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/media_actions"
        android:layout_below="@id/media_titles" />
</RelativeLayout>